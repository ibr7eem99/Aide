@using Microsoft.AspNetCore.Http
@model StudentPlanInfo
@{
    ViewData["Title"] = "Home Page";
}

<partial name="_LoaderProcessPartial" />

<section class="w-100 bg-img position-relative" style="min-height: calc(100vh - 75px); background-image: url(/images/ASU.jpeg);">
    <div style="top: 0; left: 0; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"
         class="position-absolute h-100 w-100"></div>

    <div class="d-flex justify-content-center align-items-center" style="min-height: inherit">
        <div class="card rounded-lg border-0 supuervised-form" style="width: 25rem; z-index: 1000">
            <div class="card-body">
                <form asp-action="Index" method="post" class="form">

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label asp-for="Year"></label>
                            <input asp-for="Year" class="form-control">
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <label asp-for="Semester"></label>
                            <select asp-for="Semester" asp-items="@Html.GetEnumSelectList<eSemester>()" class="form-control"></select>
                            <span asp-validation-for="Semester" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Initiate The Process"
                               class="btn btn-dark rounded-pill px-3 py-2" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

